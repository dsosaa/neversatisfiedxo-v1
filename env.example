# V0 Trailer Environment Configuration
# Copy this file to .env and update the values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
POSTGRES_USER=mediacms
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=mediacms
REDIS_PASSWORD=change_this_redis_password

# =============================================================================
# DJANGO CONFIGURATION
# =============================================================================
DJANGO_SECRET_KEY=change_this_django_secret_key_minimum_50_characters
DJANGO_DEBUG=False

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NEXT_PUBLIC_SITE_NAME=neversatisfiedxo
NEXT_PUBLIC_CF_STREAM_CUSTOMER_CODE=your_cloudflare_customer_code_here
GATE_PASSWORD=change_this_gate_password
JWT_SECRET=change_this_jwt_secret_minimum_32_characters

# =============================================================================
# URL CONFIGURATION
# =============================================================================
NEXT_PUBLIC_BASE_URL=http://localhost:3000
MEDIACMS_BASE_URL=http://mediacms:80
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://web:3000

# =============================================================================
# OPTIONAL CONFIGURATION
# =============================================================================
DOMAIN_NAME=localhost
MEDIACMS_API_TOKEN=your_mediacms_api_token_here
CF_ACCOUNT_ID=your_cloudflare_account_id_here
CF_STREAM_API_TOKEN=your_cloudflare_stream_api_token_here
NEXT_PUBLIC_GA_ID=your_google_analytics_id_here
NEXT_PUBLIC_HOTJAR_ID=your_hotjar_id_here
MONITORING_WEBHOOK_URL=your_monitoring_webhook_url_here

