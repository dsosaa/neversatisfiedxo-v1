# Production Environment Configuration
# Copy this file to .env.production and fill in the actual values

# ===========================================
# REQUIRED - Application Core
# ===========================================

# Site branding
NEXT_PUBLIC_SITE_NAME=neversatisfiedxo

# Cloudflare Stream Configuration (REQUIRED)
NEXT_PUBLIC_CF_STREAM_CUSTOMER_CODE=your_32_character_customer_code_here

# Authentication (REQUIRED - Use a strong password!)
GATE_PASSWORD=your-super-strong-password-with-special-chars-123!@#

# ===========================================
# REQUIRED - Backend Integration
# ===========================================

# MediaCMS Backend URL
MEDIACMS_BASE_URL=https://your-mediacms-domain.com
MEDIACMS_API_TOKEN=your_mediacms_api_token_here

# ===========================================
# REQUIRED - Database Configuration
# ===========================================

# PostgreSQL
POSTGRES_USER=mediacms
POSTGRES_PASSWORD=your-secure-database-password-here
POSTGRES_DB=mediacms

# Redis
REDIS_PASSWORD=your-secure-redis-password-here

# Django
DJANGO_SECRET_KEY=your-very-long-and-random-django-secret-key-here
DJANGO_DEBUG=False

# ===========================================
# OPTIONAL - Advanced Features
# ===========================================

# Cloudflare Stream API (for advanced features)
CF_ACCOUNT_ID=your_cloudflare_account_id
CF_STREAM_API_TOKEN=your_cloudflare_stream_api_token

# Domain Configuration
DOMAIN_NAME=videos.neversatisfiedxo.com
NEXT_PUBLIC_BASE_URL=https://videos.neversatisfiedxo.com
ALLOWED_HOSTS=videos.neversatisfiedxo.com,www.videos.neversatisfiedxo.com

# ===========================================
# OPTIONAL - Analytics & Monitoring
# ===========================================

# Google Analytics
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Hotjar (Heatmap analytics)
NEXT_PUBLIC_HOTJAR_ID=12345678

# Error Tracking & Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
MONITORING_WEBHOOK_URL=https://your-monitoring-webhook.com/endpoint

# ===========================================
# OPTIONAL - Performance & SEO
# ===========================================

# Debug mode (keep false in production)
NEXT_PUBLIC_DEBUG=false

# CDN Configuration
CDN_URL=https://your-cdn.com

# ===========================================
# OPTIONAL - Security & Compliance
# ===========================================

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
SSL_KEY_PATH=/etc/ssl/private/your-domain.key

# Content Security Policy reporting
CSP_REPORT_URI=https://your-csp-report-collector.com/report

# ===========================================
# DEPLOYMENT CONFIGURATION
# ===========================================

# Container Registry
CONTAINER_REGISTRY=your-registry.com
CONTAINER_USERNAME=your-username
CONTAINER_PASSWORD=your-access-token

# Production Server
PRODUCTION_HOST=82.180.137.156
PRODUCTION_USER=root
PRODUCTION_URL=https://videos.neversatisfiedxo.com

# Notification
SLACK_WEBHOOK=https://hooks.slack.com/services/your/slack/webhook