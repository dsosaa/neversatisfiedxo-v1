# neversatisfiedxo Premium Gallery - Environment Configuration Template
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control!

# Django Backend Configuration
SECRET_KEY=your-very-long-secret-key-here-at-least-50-characters
DEBUG=False
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,localhost
CSRF_TRUSTED_ORIGINS=https://yourdomain.com,http://localhost:3000

# Database Configuration
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_secure_database_password
DB_HOST=localhost
DB_PORT=5432
DB_SSLMODE=require

# Site Configuration
NEXT_PUBLIC_SITE_NAME=neversatisfiedxo

# Cloudflare Stream Configuration
NEXT_PUBLIC_CF_STREAM_CUSTOMER_CODE=your_customer_code
CLOUDFLARE_STREAM_CUSTOMER_CODE=your_customer_code
CLOUDFLARE_ACCOUNT_ID=your_account_id
CLOUDFLARE_STREAM_API_TOKEN=your_api_token

# MediaCMS Backend Configuration
MEDIACMS_BASE_URL=https://yourdomain.com
MEDIACMS_API_TOKEN=your_secure_api_token

# Authentication Configuration
# CRITICAL: Use a strong password! Minimum 16 characters, mixed case, numbers, symbols
GATE_PASSWORD=your_very_secure_password_here

# Rate Limiting Configuration
THROTTLE_ANON=100/hour
THROTTLE_USER=1000/hour

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Cache Configuration (Production - Redis recommended)
REDIS_URL=redis://localhost:6379/1

# File Paths
MEDIA_ROOT=/var/media/
STATIC_ROOT=/var/static/
LOG_FILE=/var/log/trailers.log
SECURITY_LOG_FILE=/var/log/security.log

# Email Configuration (for error reporting)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
ADMIN_EMAIL=admin@yourdomain.com

# Upload Limits
MAX_VIDEO_SIZE_MB=500

# Development Settings (set to false in production)
NODE_ENV=production
NEXT_PUBLIC_DEBUG=false

# Optional: Analytics (uncomment if using)
# NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_HOTJAR_ID=xxxxxxxxx

# Optional: Error Tracking (uncomment if using Sentry)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# NEXT_PUBLIC_SENTRY_DSN=https://your-public-sentry-dsn@sentry.io/project-id

# Optional: Monitoring (uncomment if using external monitoring)
# MONITORING_WEBHOOK_URL=https://your-monitoring-webhook.com/endpoint