{
  "name": "web",
  "version": "2.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbopack --port 3000",
    "dev:secure": "NODE_ENV=development next dev --turbopack --port 3000",
    "build": "npm run security:check && npm run type-check && next build --turbopack",
    "build:production": "npm run type-check && next build --turbopack",
    "build:analyze": "ANALYZE=true next build --turbopack",
    "build:ci": "NODE_ENV=production npm run security:check && npm run lint && npm run type-check && next build --turbopack",
    "start": "next start",
    "lint": "eslint --cache --cache-location .next/cache/eslint/",
    "lint:fix": "eslint --fix --cache --cache-location .next/cache/eslint/",
    "lint:strict": "eslint --max-warnings 0",
    "type-check": "tsc --noEmit --incremental --tsBuildInfoFile .next/cache/tsconfig.tsbuildinfo",
    "type-check:watch": "npm run type-check -- --watch",
    "preview": "npm run build && npm run start",
    "clean": "rm -rf .next out dist .turbo",
    "clean:cache": "rm -rf .next/cache node_modules/.cache",
    "test": "npm run test:types && npm run test:lint && npm run test:security && npm run test:e2e",
    "test:types": "npm run type-check",
    "test:lint": "npm run lint:strict",
    "test:unit": "echo 'Unit tests not configured yet'",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:security": "npm audit --audit-level high && npm run security:deps",
    "security:check": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "security:deps": "npm ls --depth=0",
    "security:licenses": "npm ls --depth=0 --json | jq '.dependencies | keys[]' | sort",
    "playwright:install": "playwright install",
    "playwright:install-deps": "playwright install-deps",
    "analyze": "npm run build:analyze",
    "perf:lighthouse": "lighthouse http://localhost:3000 --output html --output-path ./lighthouse-report.html",
    "perf:lighthouse-ci": "lhci autorun",
    "perf:lighthouse-ci:collect": "lhci collect",
    "perf:lighthouse-ci:assert": "lhci assert",
    "perf:bundle": "npx @next/bundle-analyzer",
    "docker:build": "docker build -f ../../Dockerfile -t v0-trailer ../../",
    "docker:run": "docker run -p 3000:3000 --env-file .env.local v0-trailer",
    "production:test": "NODE_ENV=production npm run build && npm run start",
    "production:validate": "npm run build:ci && npm run test && npm run perf:lighthouse",
    "ci": "npm run build:ci && npm run test",
    "dev:debug": "NODE_OPTIONS='--inspect' next dev --turbopack --port 3000"
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.6",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toggle": "^1.1.10",
    "@radix-ui/react-toggle-group": "^1.1.11",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.87.1",
    "@tanstack/react-query-devtools": "^5.87.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/papaparse": "^5.3.16",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "dotenv": "^17.2.2",
    "framer-motion": "^12.23.12",
    "js-cookie": "^3.0.5",
    "lucide-react": "^0.542.0",
    "next": "15.5.2",
    "next-themes": "^0.4.6",
    "papaparse": "^5.5.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.62.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^3.3.1",
    "vaul": "^1.1.2",
    "web-vitals": "^5.1.0",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@lhci/cli": "^0.15.1",
    "@next/bundle-analyzer": "^15.5.2",
    "@playwright/test": "^1.55.0",
    "@tailwindcss/postcss": "^4",
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.2",
    "lighthouse": "^12.8.2",
    "tailwindcss": "^4",
    "tw-animate-css": "^1.3.8",
    "typescript": "^5"
  }
}
